{% extends 'base.html.twig' %}

{% block title %}Home Rezany{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="../front/Css/Home.css"    />
{% endblock %}
{% block body %}
    <main class="container-fluid">
        <section class="row">
            <div
                    id="carouselExampleIndicators"
                    class="carousel slide col-lg-12"
                    data-ride="carousel"
            >
                <ol class="carousel-indicators">
                    <li
                            data-target="#carouselExampleIndicators"
                            data-slide-to="0"
                            class="active"
                    ></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="../Img/image1R.png" class="d-block w-100" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="../Img/image2R.jpg" class="d-block w-100" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="../Img/image3R.png" class="d-block w-100" alt="..." />
                    </div>
                </div>
                <a
                        class="carousel-control-prev"
                        href="#carouselExampleIndicators"
                        role="button"
                        data-slide="prev"
                >
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a
                        class="carousel-control-next"
                        href="#carouselExampleIndicators"
                        role="button"
                        data-slide="next"
                >
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
        <section class="row">
            <div class="card-deck" id="card-deck">
                <div class="card col-lg-4">
                    <img src="../Img/cardimg1.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Manteaux</h5>
                        <p class="card-text">Pour affronter l'hiver.</p>
                        <p class="card-text"></p>
                    </div>
                </div>
                <div class="card col-lg-4">
                    <img src="../Img/cardimg2.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Bijoux</h5>
                        <p class="card-text">Boucles d'oreilles, bracelets, bagues, ...</p>
                        <p class="card-text"></p>
                    </div>
                </div>
                <div class="card col-lg-4">
                    <img src="../Img/cardimg3.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Robes de soirée</h5>
                        <p class="card-text">Pour vos petits et grands évenements.</p>
                        <p class="card-text"></p>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
