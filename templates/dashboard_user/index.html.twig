{% extends 'base.html.twig' %}

{% block title %}Hello DashboardUserController!{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('../front/Css/Dashbord.css') }}" />

{% endblock %}

{% block body %}
    <section class="container-fluid">
    <div class="nav-btn">Menu User</div>
    <div class="sidebar">
        <div class="nav-dashbord">
            <ul>
                <li class="active"><a href="{{ path('dashboard_user_index') }}"> Dashboard </a></li>
                <li><a href="{{ path('dashboard_history_index') }}">Historique</a></li>
                <li><a href="{{ path('dashboard_notification_index') }}">Notification</a></li>
                <li><a href="{{ path('dashboard_securiter_index') }}">
                        Confidentialité / sécurité
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="main-dashbord">
            <h1 class="mt-4">Dashboard de {{ app.user.nom }}</h1>
            <div class="panel-wrapper">
                <div class="panel-head">Nom</div>
                <div class="input-group mb-3">{{ app.user.nom }}</div>
            </div>
            <div class="panel-wrapper">
                <div class="panel-head">Email</div>
                <div class="input-group mb-3">{{ app.user.email }}</div>
            </div>
            <div class="panel-wrapper">
                <div class="panel-head">Mot de passe</div>
                <div class="input-group mb-3">{{ app.user.password }}</div>
            </div>
            <div class="panel-wrapper">
                <div class="panel-head">Modification du profil</div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <a type="button" href="{{ path('dashboard_securiter_index') }}">
                            Demande d modification
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>

{% endblock %}
